{
	"env": {
		"browser": true,
		"es2021": true
	},

	"extends": ["airbnb", "plugin:react/recommended", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"globals": {
		"React": "readonly"
	},
	"rules": {
		"import/no-extraneous-dependencies": [
			"error",
			{ "devDependencies": ["**/*.test.js", "**/*.config.js"] }
		]
	}
}
